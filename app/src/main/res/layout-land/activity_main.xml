<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark"
    tools:context=".presentation.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarLandscapeStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size_heigth"
        app:logo="@mipmap/ic_marvel"
        app:navigationIcon="@drawable/ic_exit_to_app_black_24dp"
        app:title="@string/app_name"
        app:titleTextColor="@color/color_fontTitles_recycler" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/recycler_margiTop" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_db"
        style="@color/colorPrimaryDark"
        android:layout_width="@dimen/margin_floatingButton"
        android:layout_height="@dimen/margin_floatingButton"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_download_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_service"
        android:layout_width="@dimen/margin_floatingButton"
        android:layout_height="@dimen/margin_floatingButton"
        android:layout_gravity="bottom|left"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_autorenew_black_24dp" />
</FrameLayout>
