<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_background_recycler"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_top_card_character"
        android:layout_marginTop="@dimen/margin_top_card_character"
        android:layout_marginRight="@dimen/margin_top_card_character"
        android:layout_marginBottom="@dimen/margin_top_card_character"
        android:elevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/color_text_description"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/character_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:contentDescription="@string/app_name"
                android:minWidth="@dimen/margin_min_dialogFragment"
                android:minHeight="@dimen/margin_minHeight_dialogFragment"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="@dimen/landscape_margin_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/character_name"
                    style="@style/TitleStyleLandscapeView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_text_info_character"
                    android:layout_marginTop="@dimen/margin_Top_text_info_character"
                    android:layout_marginRight="@dimen/margin_text_info_character"
                    android:layout_marginBottom="@dimen/margin_text_info_character" />

                <TextView
                    android:id="@+id/character_description"
                    style="@style/SubtitleStyleLandscapeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_text_info_character"
                    android:layout_marginTop="@dimen/margin_Top_text_info_character"
                    android:layout_marginRight="@dimen/margin_text_info_character"
                    android:layout_marginBottom="@dimen/margin_text_info_character"
                    android:minWidth="@dimen/margin_min_dialogFragment"
                    android:minHeight="@dimen/margin_minHeight_description_dialogFragment" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
