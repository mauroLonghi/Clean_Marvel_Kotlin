<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ToolbarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/button_exit"
        android:layout_width="@dimen/title_text_landscape_size"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_exit_to_app_black_24dp" />

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="@dimen/image_toolbar_width"
        android:layout_height="@dimen/image_toolbar_heigth"
        android:padding="@dimen/padding_toolbar"
        android:src="@drawable/marvellogo" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/TitleStyleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_toolbar"
        android:text="@string/app_name" />
</LinearLayout>
